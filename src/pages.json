			"uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"v-(.*)": "@/components/v-$1/v-$1.vue",
			"pl-(.*)": "@/components/pl-$1/pl-$1.vue"
